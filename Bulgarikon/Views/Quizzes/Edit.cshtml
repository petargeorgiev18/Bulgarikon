@using Microsoft.AspNetCore.Mvc.Rendering
@model Bulgarikon.Core.DTOs.QuizDTOs.QuizFormDto

@{
    ViewData["Title"] = "Редакция";
    var quizId = (Guid?)ViewBag.QuizId;
}

<div class="container py-3">
    <div class="d-flex justify-content-between align-items-start gap-2 mb-3">
        <div>
            <div class="text-muted small">Админ • Редакция</div>
            <h1 class="mb-0">Редакция на куиз</h1>
        </div>

        @if (quizId != null)
        {
                <a asp-action="Details" asp-route-id="@quizId" class="btn btn-outline-secondary">← Детайли</a>
        }
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-4">
            <form asp-action="Edit" asp-route-id="@quizId" method="post" autocomplete="off">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-semibold">Заглавие</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EraId" class="form-label fw-semibold">Епоха</label>
                    <select asp-for="EraId"
                            class="form-select"
                            asp-items="(IEnumerable<SelectListItem>)ViewBag.Eras">
                        <option value="">-- Избери епоха --</option>
                    </select>
                    <span asp-validation-for="EraId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    @if (quizId != null)
                    {
                            <a asp-action="Details" asp-route-id="@quizId" class="btn btn-outline-secondary">Отказ</a>
                    }
                    else
                    {
                            <a asp-action="Index" class="btn btn-outline-secondary">Отказ</a>
                    }
                    <button type="submit" class="btn btn-primary">Запази</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}