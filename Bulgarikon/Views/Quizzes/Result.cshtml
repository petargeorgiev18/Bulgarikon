@model Bulgarikon.Core.DTOs.QuizDTOs.QuizResultViewDto
@{
    ViewData["Title"] = "Резултат";
}

<div class="container py-3">
    <div class="mb-3">
        <div class="text-muted small">Резултат • @Model.EraName</div>
        <h1 class="mb-0">@Model.QuizTitle</h1>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="display-6 fw-bold">@Model.Score / @Model.MaxScore</div>
            <div class="text-muted">Решен на: @Model.DateTaken.ToString("dd.MM.yyyy HH:mm")</div>
        </div>
    </div>

    <div class="d-flex gap-2 mt-3">
        <a asp-action="Details" asp-route-id="@Model.QuizId" class="btn btn-outline-secondary">Към куиза</a>
        <a asp-action="MyResults" class="btn btn-outline-primary">Моите резултати</a>
    </div>
</div>