@model Bulgarikon.Core.DTOs.QuestionDTOs.QuestionFormDto

@{
    ViewData["Title"] = "Добави въпрос";
}

<div class="container py-3">
    <div class="d-flex justify-content-between align-items-start gap-2 mb-3">
        <div>
            <div class="text-muted small">Админ • Добавяне</div>
            <h1 class="mb-0">Нов въпрос</h1>
        </div>

        <a asp-action="Index" asp-route-quizId="@Model.QuizId" class="btn btn-outline-secondary">← Назад</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-4">
            <form asp-action="Create" method="post" autocomplete="off">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 mb-3"></div>

                <input type="hidden" asp-for="QuizId" />

                <div class="mb-3">
                    <label asp-for="Text" class="form-label fw-semibold">Текст на въпроса</label>
                    <textarea asp-for="Text" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>

                <div class="alert alert-info py-2">
                    Въведи <strong>4 отговора</strong> и маркирай <strong>точно 1</strong> като правилен.
                </div>

                @for (int i = 0; i < Model.Answers.Count; i++)
                {
                    <div class="row g-2 align-items-center mb-2">
                        <div class="col-12 col-md-9">
                            <label class="form-label small text-muted mb-1">Отговор @(i + 1)</label>
                            <input asp-for="Answers[@i].Text" class="form-control" />
                            <span asp-validation-for="Answers[@i].Text" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-md-3">
                            <label class="form-label small text-muted mb-1 d-block">Правилен</label>
                            <div class="form-check mt-1">
                                <input asp-for="Answers[@i].IsCorrect" class="form-check-input" type="checkbox" />
                                <label class="form-check-label">Да</label>
                            </div>
                        </div>
                    </div>
                }

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" asp-route-quizId="@Model.QuizId" class="btn btn-outline-secondary">Отказ</a>
                    <button type="submit" class="btn btn-primary">Запази</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}