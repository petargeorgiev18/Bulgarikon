@model Bulgarikon.Core.DTOs.EraDTOs.EraViewDto

@{
    ViewData["Title"] = "Детайли";
    bool isAdmin = User.IsInRole("Admin");
}

<div class="container py-3">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-start gap-2 mb-3">
        <div>
            <div class="text-muted small">Епоха</div>
            <h1 class="mb-1">@Model.Name</h1>
            <div class="text-muted">@Model.StartYear – @Model.EndYear</div>
        </div>

        <div class="d-flex gap-2 flex-wrap">
            <a asp-action="Index" class="btn btn-outline-secondary">← Назад</a>

            @if (isAdmin)
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Редактирай</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">Изтрий</a>
            }
        </div>
    </div>

    <div class="card shadow-sm era-paper">
        <div class="card-body">
            <h5 class="mb-3">Описание</h5>

            @if (string.IsNullOrWhiteSpace(Model.Description))
            {
                <div class="alert alert-info mb-0">Няма описание.</div>
            }
            else
            {
                <p class="mb-0 era-readable">@Model.Description</p>
            }
        </div>
    </div>

    <div class="mt-3 d-flex gap-2 flex-wrap">
        <a asp-controller="Events" asp-action="Index" class="btn btn-sm btn-outline-secondary">Събития</a>
        <a asp-controller="Figures" asp-action="Index" class="btn btn-sm btn-outline-secondary">Личности</a>
        <a asp-controller="Artifacts" asp-action="Index" class="btn btn-sm btn-outline-secondary">Артефакти</a>
        <a asp-controller="Civilizations" asp-action="Index" asp-route-eraId="@Model.Id" class="btn btn-sm btn-outline-secondary">
            Цивилизации
        </a>
    </div>
</div>

@await Html.PartialAsync("Partials/_DeleteEraModal")